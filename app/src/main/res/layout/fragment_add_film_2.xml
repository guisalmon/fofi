<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_04">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_12"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/size_04"
                    android:paddingEnd="@dimen/size_04">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_04"
                        android:text="@string/add_location"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/size_04"
                    android:layout_height="@dimen/size_04"
                    android:layout_margin="@dimen/size_04"
                    android:background="@drawable/threeway_button_bg"
                    android:padding="@dimen/size_005"
                    android:src="@drawable/plus"
                    android:tint="@color/white" />
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/spacer_end"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/size_02"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/spacer_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_02" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_film"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@id/spacer_bottom"
            app:layout_constraintEnd_toStartOf="@id/spacer_end"
            app:rippleColor="@color/colorAccentLight"
            android:layout_width="@dimen/size_07"
            android:layout_height="@dimen/size_07"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/content_save"
            android:tint="@color/white_pressed_dark" />
    </android.support.constraint.ConstraintLayout>
</layout>