<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/threeway_button_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_bw"
            android:layout_width="@dimen/size_04"
            android:layout_height="@dimen/size_04"
            android:background="@drawable/radio_bw"
            android:button="@null" />

        <RadioButton
            android:id="@+id/radio_both"
            android:layout_width="@dimen/size_04"
            android:layout_height="@dimen/size_04"
            android:background="@drawable/radio_both"
            android:button="@null" />

        <RadioButton
            android:id="@+id/radio_color"
            android:layout_width="@dimen/size_04"
            android:layout_height="@dimen/size_04"
            android:background="@drawable/radio_color"
            android:button="@null" />

    </RadioGroup>
</layout>