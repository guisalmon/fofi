<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>


    <style name="Text"/>

    <style name="Text.Toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_02</item>
        <item name="android:layout_marginEnd">@dimen/size_02</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Text.Toolbar.Edit">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ImageView"/>

    <style name="ImageView.Toolbar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableTint">@color/text</item>
        <item name="android:padding">@dimen/size_02</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ImageView.Toolbar.Constraint">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

</resources>
